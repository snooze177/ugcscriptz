local Players, CoreGui, UIS = game:GetService("Players"), game:GetService("CoreGui"), game:GetService("UserInputService")

local gui = Instance.new("ScreenGui")
gui.Name, gui.ResetOnSpawn = "SnoozeAntiAFK", false
gui.Parent = CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,220,0,100)
frame.Position = UDim2.new(0,10,1,-110) -- Позиция в левом нижнем углу (10px от левого края, 110px от нижнего)
frame.AnchorPoint = Vector2.new(0,1) -- Якорь в нижнем левом углу фрейма
frame.BackgroundColor3 = Color3.fromRGB(25,25,35)
frame.BackgroundTransparency, frame.BorderSizePixel = 0.2, 0
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0,8)

local function CreateLabel(name, text, pos, color, size, font)
    local lbl = Instance.new("TextLabel")
    lbl.Name, lbl.Text, lbl.Size = name, text, UDim2.new(1,0,0.3,0)
    lbl.Position, lbl.AnchorPoint = pos, Vector2.new(0.5,0.5)
    lbl.BackgroundTransparency, lbl.TextColor3 = 1, color
    lbl.Font, lbl.TextSize = font or Enum.Font.Gotham, size
    lbl.Parent = frame
    return lbl
end

CreateLabel("Title", "ANTI-AFK", UDim2.new(0.5,0,0.2,0), Color3.new(1,1,1), 20, Enum.Font.GothamBold)
CreateLabel("Status", "Actived", UDim2.new(0.5,0,0.5,0), Color3.fromRGB(0,255,0), 16)
CreateLabel("Credits", "Credits: @snooze", UDim2.new(0.5,0,0.8,0), Color3.fromRGB(200,200,255), 14)

coroutine.wrap(function()
    while task.wait(28) do
        if Players.LocalPlayer.Character then
            local cam = workspace.CurrentCamera
            if cam then
                cam.CFrame = cam.CFrame * CFrame.Angles(0,math.rad(10),0)
                task.wait(0.3)
                cam.CFrame = cam.CFrame * CFrame.Angles(0,math.rad(-10),0)
            end
        end
    end
end)()

local dragging, dragInput, dragStart, startPos

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging, dragStart, startPos = true, input.Position, frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale,startPos.X.Offset+delta.X,startPos.Y.Scale,startPos.Y.Offset+delta.Y)
    end
end)

local close = Instance.new("TextButton")
close.Text, close.Size, close.Position = "×", UDim2.new(0,25,0,25), UDim2.new(1,-30,0,5)
close.BackgroundColor3, close.TextColor3 = Color3.fromRGB(255,60,60), Color3.new(1,1,1)
close.Font, close.Parent = Enum.Font.GothamBold, frame
close.MouseButton1Click:Connect(function() gui:Destroy() end)
